<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/orange_700</item>
        <item name="hintTextColor">@color/orange_700</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <style name="Button">
        <item name="android:background">@drawable/btn_round_corner</item>
        <item name="android:fontFamily">@font/generalsans_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="elevation">20dp</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">56dp</item>
    </style>
    <style name="Button.Primary" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange_700</item>
    </style>
    <style name="Button.Secondary" parent="Button">
        <item name="android:textColor">@color/orange_700</item>
        <item name="backgroundTint">@color/orange_200</item>
    </style>
    <style name="Button.Retry" parent="Button">
        <item name="android:textColor">@color/text_grey</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="ImageButton">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/filter_button_border</item>
    </style>

    <style name="ImageButton.Filter" parent="ImageButton">
        <item name="android:src">@drawable/filters</item>
    </style>
    <style name="ImageButton.Filter.Light" parent="ImageButton">
        <item name="android:src">@drawable/filters_light</item>
        <item name="backgroundTint">#22C2C2C2</item>
    </style>

    <style name="ImageButton.LogOut" parent="ImageButton">
        <item name="android:src">@drawable/baseline_logout_24</item>
    </style>
    <style name="ImageButton.LogOut.Light" parent="ImageButton">
        <item name="android:src">@drawable/baseline_logout_24_light</item>
        <item name="backgroundTint">#22C2C2C2</item>
    </style>

    <style name="ImageButton.BackCarret" parent="ImageButton">
        <item name="android:src">@drawable/baseline_arrow_back_ios_24</item>
    </style>
    <style name="ImageButton.BackCarret.Light" parent="ImageButton">
        <item name="android:src">@drawable/baseline_arrow_back_ios_24_light</item>
        <item name="backgroundTint">#22C2C2C2</item>
    </style>

    <style name="ImageButton.Star" parent="ImageButton">
        <item name="android:src">@drawable/star</item>
    </style>
    <style name="ImageButton.Star.Light" parent="ImageButton">
        <item name="android:src">@drawable/star_light</item>
        <item name="backgroundTint">#22C2C2C2</item>
    </style>

    <style name="FloatingActionButton">
        <item name="android:elevation">6dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@android:color/white</item>
    </style>

    <style name="FloatingActionButton.Big" parent="FloatingActionButton">
        <item name="fabSize">auto</item>
    </style>
    <style name="FloatingActionButton.Big.Skip" parent="FloatingActionButton.Big">
        <item name="android:src">@drawable/dislike_red</item>
        <item name="tint">@color/button_red</item>
        <item name="rippleColor">#22ED7563</item>
    </style>
    <style name="FloatingActionButton.Big.Like" parent="FloatingActionButton.Big">
        <item name="android:src">@drawable/like_white</item>
        <item name="tint">@color/white</item>
        <item name="rippleColor">#9F8053</item>
        <item name="backgroundTint">@color/orange_700</item>
    </style>

    <style name="FloatingActionButton.Mini" parent="FloatingActionButton">
        <item name="fabSize">mini</item>
    </style>
    <style name="FloatingActionButton.Mini.Rewind" parent="FloatingActionButton.Mini">
        <item name="android:src">@drawable/skip</item>
        <item name="tint">@color/button_grey</item>
    </style>

    <style name="ProgressBar">
        <item name="progressBarStyle">?attr/progressBarStyle</item>
    </style>
</resources>