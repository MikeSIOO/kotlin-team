<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/dish_card"
                android:layout_gravity="center"
                android:layout_width="220dp"
                android:layout_height="270dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="44dp"
                android:rotation="10"
                android:clipChildren="false">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/like_shadowed"
                    android:translationZ="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

            <androidx.cardview.widget.CardView
                    android:id="@+id/recipe_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardUseCompatPadding="true"
                    app:cardPreventCornerOverlap="false"
                    app:cardCornerRadius="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    app:cardBackgroundColor="@android:color/white">


            <ImageView
                    android:id="@+id/recipe_img"
                    android:src="@drawable/rec5"
                    android:layout_width="176dp"
                    android:layout_height="240dp"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/rec5" />
            </androidx.cardview.widget.CardView>


        </RelativeLayout>


        <RelativeLayout
                android:id="@+id/card_user"
                android:layout_gravity="center"
                android:layout_width="220dp"
                android:layout_height="290dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:rotation="-10"
                android:layout_marginTop="150dp"
                android:layout_marginStart="36dp"
                android:clipChildren="false">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/like_shadowed"
                    android:translationZ="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true" />

            <androidx.cardview.widget.CardView
                    android:id="@+id/user_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardUseCompatPadding="true"
                    app:cardPreventCornerOverlap="false"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true">

            <ImageView
                    android:id="@+id/user_img"
                    android:src="@drawable/man"
                    android:layout_width="176dp"
                    android:layout_height="240dp"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/man" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    <TextView
            android:layout_marginHorizontal="30dp"
            android:id="@+id/match_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/match_text"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/accent_orange"
            android:textSize="28sp"
            app:layout_constraintTop_toBottomOf="@id/card_user" />

    <TextView
            android:id="@+id/lets_start_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:textColor="@color/support_text"
            android:textSize="16sp"
            android:text="@string/lets_cook"
            app:layout_constraintTop_toBottomOf="@id/match_text" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/start_button"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="290dp"
            android:text="@string/start_cooking"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_height="56dp"
            android:backgroundTint="@color/accent_orange"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lets_start_text" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/back_to_feed_button"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="290dp"
            android:text="@string/back_to_feed"
            android:textColor="@color/accent_orange"
            android:textSize="16sp"
            android:layout_height="56dp"
            android:backgroundTint="@color/accent_orange_opacity"
            android:layout_marginTop="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_button" />
</androidx.constraintlayout.widget.ConstraintLayout>