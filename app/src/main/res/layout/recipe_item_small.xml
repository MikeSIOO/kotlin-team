<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="116dp"
        android:layout_height="164dp"
        android:layout_marginEnd="8dp">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:foreground="?attr/selectableItemBackground"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@android:color/white">

        <ImageView
                android:id="@+id/recipe_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

            <TextView
                    android:id="@+id/made_recipe_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Text.Body.Small.White.Semibold"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="8dp" />


            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp" >

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:alpha="0.45"
                        android:backgroundTintMode="multiply"
                        android:backgroundTint="#5A4F4F">

                </FrameLayout>

                <TextView
                        android:id="@+id/made_recipe_cook_text"
                        android:text="@string/made_recipe_cook_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        style="@style/Text.Body.ExtraSmall.White.Semibold"
                        android:letterSpacing="0.1" />

            </FrameLayout>




        </LinearLayout>


    </androidx.cardview.widget.CardView>

</FrameLayout>